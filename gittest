#!/usr/bin/python3

import os
from git import Repo

localdir = '/home/ark/pyark'

repo = Repo(localdir)

origin = repo.remotes.origin

print(repo.head.commit)
origin.fetch()
print(origin.refs[0].commit)
if repo.head.commit != origin.refs[0].commit:
    print('mismatched version. pulling')
    origin.pull()
    origin.push()


print(repo.head.commit)
